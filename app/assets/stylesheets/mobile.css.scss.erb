    background: -webkit-gradient(linear, left top, left bottom, from(#e4e4e4), to(#d4d4d4));

    box-shadow: -1px 2px 6px rgba(130, 130, 130, 0.5);
    -webkit-box-shadow: -1px 2px 6px rgba(130, 130, 130, 0.5);
