  .current {
    width: auto;
    border: 1px solid #DDD;
    border-bottom: 1px solid #999;
    border-right: 1px solid #CCC;

    background: -webkit-gradient(linear, left top, left bottom, from(#e4e4e4), to(#d4d4d4));

    font-size: 16px;
    line-height: 18px;

    padding: 12px;
    margin-left: -1px;

    font-weight: bold;

    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);

    .disclosed {
      float: right;
      img {
        position: absolute;
        top: 48px;
        right: 0;
      }
    }

    img {
      padding-right: 1px;
      vertical-align: text-top;
    }
  }
}

