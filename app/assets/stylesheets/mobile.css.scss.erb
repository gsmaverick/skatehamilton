/**
 * app.css 
 * Master stylesheet for SkateHamilton mobile app
 * @author Gavin Schulz
*/

/**
 * Set some sensible defaults and do some resetting
 */
html {
  text-size-adjust: 100%;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  height: 100%;
  width: 100%;
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
}

body {
  font: 15px/20px "Helvetica Neue", "Helvetica", Arial, sans-serif;
  word-wrap: break-word;
  -webkit-font-smoothing: antialiased;
  height: 100%;
  width: 100%;

  padding-bottom: 100px !important;

  /*overflow: hidden;*/
}

body, input, div, ul, li, form {
  display: block;
  margin: 0;
  padding: 0;
  color: #444;
}

ul, li {
  list-style: none;
  list-style-image: none;
}

a img { border: none; }

.clearfix:before, .clearfix:after {
  content: "";
  display: table;
}

.clearfix:after { clear: both; }

.clearfix { zoom: 1; }

.left { float: left; }

.right { float: right; }

/**
 * Form resetting based on Formalize
 */
::-moz-focus-inner {
  border: 0;
  padding: 0;
}

input, button {
  margin: 0;
  vertical-align: middle;
  -webkit-appearance: none;
  background-clip: padding-box;
  -moz-background-clip: padding;
  -webkit-background-clip: padding;
  overflow: visible;
  width: auto;
}

#header {
  position: absolute;
  top: 0;
  left: 0;

  width: 100%;
  height: 44px;
  z-index: 100;
  color: white;

  background: #000;
  background: -webkit-gradient(linear, left top, left bottom, from(#646363), to(#353535));

  border-bottom: 1px solid #181818;
  /*border-top: 2px solid #9F9F9F;*/
  /*border-top: 2px solid #181818;*/

  h1 {
    text-align: center;
    margin: 0;
    line-height: 44px;
    font-size: 20px;
    text-shadow: 0px 1px 0 #333;
  }

  .button {
    position: absolute;
    top: 5px;
    height: 32px;
    min-width: 18px;
    z-index: 20;

    border: 1px solid #222;
    border-bottom: 1px solid #444;
    border-radius: 5px;

    text-decoration: none;
    color: white;

    background: -webkit-gradient(linear, left top, left bottom, from(#4F4F4F), to(#222));

    -moz-box-shadow: inset 0 0 2px #000;
    -webkit-box-shadow: inset 0 0 2px #000;
    box-shadow: inset 0 0 2px #000;

    line-height: 32px;
    font-weight: bold;

    img {
      padding: 7px 8px;
      outline: none;
      border: none;
    }
  }

  #search {
    right: 5px;
  }

}

#map {
  margin-top: 1px;
