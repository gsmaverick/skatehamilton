/**
 * app.css 
 * Master stylesheet for SkateHamilton mobile app
 * @author Gavin Schulz
*/

/**
 * Set some sensible defaults and do some resetting
 */
html {
  text-size-adjust: 100%;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  height: 100%;
  width: 100%;
}

body {
  font: 15px/20px "Helvetica Neue", "Helvetica", Arial, sans-serif;
  word-wrap: break-word;
  -webkit-font-smoothing: antialiased;
  height: 100%;
  width: 100%;
}

body, input, div, ul, li, form {
  display: block;
  margin: 0;
  padding: 0;
  color: #444;
}

ul, li {
  list-style: none;
  list-style-image: none;
}

a img { border: none; }

.clearfix:before, .clearfix:after {
  content: "";
  display: table;
}

.clearfix:after { clear: both; }

.clearfix { zoom: 1; }

.left { float: left; }

.right { float: right; }

/**
 * Form resetting based on Formalize
 */
::-moz-focus-inner {
  border: 0;
  padding: 0;
}

input, button {
  margin: 0;
  vertical-align: middle;
  -webkit-appearance: none;
  background-clip: padding-box;
  -moz-background-clip: padding;
  -webkit-background-clip: padding;
  overflow: visible;
  width: auto;
}

#header {
  position: absolute;
  top: 0;
  left: 0;

  width: 100%;
  height: 44px;
  z-index: 100;

  color: white;

  -moz-box-shadow: 0px 1px 8px #666;
  -webkit-box-shadow: 0px 1px 8px #666;
  box-shadow: 0px 1px 8px #666;

  background: #000;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#3F3F3F', endColorstr='#111111');
  background: -webkit-gradient(linear, left top, left bottom, from(#3F3F3F), to(#111));
  background: -moz-linear-gradient(top,  #3F3F3F,  #111);

  h1 {
    text-align: center;
    margin: 0;
    line-height: 44px;
    font-size: 20px;
  }

  img {
    float: left;
    padding: 6px 6px;
  }

  a {
    position: absolute;
    left: 0;
    top: 0;

    z-index: 20;
    color: white;
    font-weight: bold;
    padding: 12px 16px;
    text-decoration: none;
    border-right: 1px solid #444;

    -moz-box-shadow: inset -1px 0px 1px #000;
    -webkit-box-shadow: inset -1px 0px 1px #000;
    box-shadow: inset -1px 0px 1px #000;
  }
}

#map {
  height: 100%;
  width: 100%;
  z-index: 0;
}

#cover {
  position: absolute;
  top: 0;
  left: 0;

  height: 100%;
  width: 100%;
  z-index: 1;

  background: rgba(0,0,0,0.3);
}

.up_triangle {
  background-image: url(<%= asset_path 'triangles.png' %>);
  background-repeat: no-repeat;
  background-position: 0px -10px; height: 9px; width: 16px;
  position: absolute;
  margin-left: -8px;
  top: 50px;
  left: 50%;
  z-index: 20;
}

#info_bubble {
  position: absolute;
  top: 58px;
  left: 50%;

  width: 240px;
  margin-left: -129px;
  padding: 8px 8px 5px 10px;

  z-index: 10;
  background: white;

  border: 1px solid #999;

  -moz-box-shadow: 3px 3px 4px #777;
  -webkit-box-shadow: 3px 3px 4px #777;
  box-shadow: 3px 3px 4px #777;

  h3 {
    float: left;
    margin: 0px auto;
    padding: 2px 0px 2px 0px;
  }

  img {
    float: right;
    padding: 4px 4px 4px 5px;
    background: black;
    border-radius: 16px;
  }

  #words {
    margin-top: 2px;
    padding-top: 5px;
    padding-bottom: 5px;
    font-size: 0.9em;
  }

  .close {
    position: absolute;
    right: 11px;
    top: 11px;
    cursor: pointer;
    color: white;
    font-size: 1.2em;
    padding: 3px;

    .image {
      background-image: url(<%= asset_path 'gmail.png' %>);
      background-position: -40px -100px;
      height: 16px;
      width: 16px;
    }
  }
}

#rink_popup {
  position: absolute;
  bottom: 0;
  left: 0;

  width: 100%;

  z-index: 10;
  background: rgba(255,255,255,0.85);
  
  border-top: 1px solid #999;
  box-shadow: 0px -2px 4px #DDD;
  -webkit-box-shadow: 0px -2px 4px #DDD;

  #inside {
    padding: 8px 8px 5px 10px;
    margin-right: 44px;
  }

  h4 {
    margin: 0 0 4px 0;
    font-size: 20px;
    padding: 0;
  }

  span {
    color: green;
    font-weight: bold;
    font-size: 13px;
  }
}

.disclose {
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -22px;
}

#rink_details {
  position: absolute;
  top: 0;
  left: 0;

  height: 100%;
  width: 100%;
  
  margin: 0;
  padding: 0;
  border: none;

  #inside {
    margin-top: 44px;
    padding: 8px 8px 5px 10px;
  }

  h2 {
    margin: 5px 0;
    font-size: 22px;
    padding: 0;
  }

  h3 {
    margin: 2px 0 15px 0;
    padding: 0;
    font-size: 16px;
    font-weight: normal;

    .type {
      font-weight: bold;
      color: green;
    }
  }

  h4 {
    border-bottom: 1px solid #999;
    margin-bottom: 0px;
    font-size: 18px;
  }

  p {
    margin: 0;
    padding: 3px 0 5px 0;
  }

  .button {
    padding: 8px 8px 8px 4px;
    margin-right: 8px;
    font-size: 18px;
    font-weight: bold;
    line-height: 18px;
    border: 1px solid #AAA;
    border-top: 1px solid #BBB;
    background: #C4C4C4;
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#F4F4F4', endColorstr='#C4C4C4');
    background: -webkit-gradient(linear, left top, left bottom, from(#f4f4f4), to(#c4c4c4));
    background: -moz-linear-gradient(top, #f4f4f4, #c4c4c4);
    text-decoration: none;
    color: rgba(0, 0, 0, 0.8);
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);

    img {
      vertical-align: middle;
      margin-top: -4px;
      padding-right: 3px;
    }
  }
}