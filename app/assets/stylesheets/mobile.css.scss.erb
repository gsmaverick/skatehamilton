    background: white;

    background-position: 8px 50%;
    background-repeat: no-repeat;
    background-image: url('/assets/magnifier.png');
    background-size: 16px 16px;

    border: 1px solid #A4A4A4;

    input[type='text'] {
      display: inline-block;
      border: none;
      margin: 0;
      width: 100%;
      background: transparent none;
      outline: 0 !important;

      font-size: 18px;
      line-height: 20px;
      padding: 8px 0;

      ::-webkit-input-placeholder {
       color: #9c9c9c;
       font-style: italic;
      }

      ::-moz-placeholder {
       color: #9c9c9c;
       font-style: italic;
      }  

      ::-ms-placeholder {
       color: #9c9c9c;
       font-style: italic;
      }

      &:focus {
        outline: none !important;
      }
    }
  }

  ul {
    padding: 4px 0 0 0;
    margin: 0;

    li {
      border-bottom: 1px solid #CCC;
      padding: 8px 8px;
      color: #666;
      font-size: 16px;
      font-weight: bold;
      text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
    }
