<div id="header">
  <h1>SkateHamilton</h1>
</div>

<div id="info_bubble" class="tap-closeable">
  <h3>welcome.</h3>
  <%= image_tag "close.gif", :alt => "Close" %>
  <div class="clearfix"></div>
  <div id="words">Find a place to skate, play hockey and enjoy the outdoors in Hamilton.  Tap to close</div>
</div>

<div id="cover"></div>

<div id="map"></div>

<script type="text/javascript">
  var rinks = <%= @Rinks.html_safe %>;
  var rinkPath = '<%= rinks_path %>';
</script>

<script id="rink-popup-template" type="text/x-handlebars-template">
  <div id="rink_popup">
    <div id="inside">
      <h4>{{name}}</h4>
      <span>{{address}}&nbsp;&nbsp;&nbsp;({{type}})</span>
    </div>
    <%= image_tag "arrow_right.png", :alt => "Details", :class => "disclose", :size => "44x44" %>
  </div>
</script>

<script id="rink-details-template" type="text/x-handlbars-template">
  <div id="rink_details">
    <h3 style="margin-top: 50px; text-align: center;"><b>Loading...</b></h3>
  </div>
</script>

<script id="rink-detail-template" type="text/x-handlbars-template">
  <div id="inside">
  {{#with rink}}
    <h2>{{name}}</h2>
    <h3>{{address}}&nbsp;&nbsp;<span class="type">({{rink_type}} Rink)</span></h3>
    <%= link_to image_tag('direction.png', :size => "18x18") + 'Directions', '#', :class => 'button' %>
    <%= link_to image_tag('info.png', :size => "18x18") + 'More Info', '#', :class => 'button' %>

    <h4>Activites</h4>
    <p>No scheduled public activities.</p>
    <h4>Notes</h4>
    <p>This park location may have an outdoor rink, depending on the availability of volunteer ice coordinators. Ice availability is also subject to weather conditions. Hockey equipment is not permitted on the ice.</p>
  {{/with}}
  </div>
</script>